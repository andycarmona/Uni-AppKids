<!DOCTYPE html>
<html ng-app="UniAppSpelApp" ng-controller="EditPageController">
<head>
    <title ng-bind="models.helloAngular"></title>
</head>
<body>
    <input type="text" ng-model="models.helloAngular" />
    <h1>{{models.helloAngular}}</h1>
    <textarea ng-model="sentence" ng-change="parseSentence()" style="width: 100%; height: 15em;"></textarea>
    <form name="worddata" >
        <input type="text" ng-repeat="w in words track by $index" ng-model="w.WordName" ng-change="buildSentance(w)" />
        <input id="Submit1" type="button" ng-click="processForm()" value="submit" />
    </form>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular.min.js"></script>
    @Scripts.Render("~/bundles/UniAppSpelApp")
</body>
</html>