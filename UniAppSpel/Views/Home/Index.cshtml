@{
    Layout = "../Shared/_Layout.cshtml";
}

<div ng-app="UniAppSpelApp" ng-controller="LandingPageController">

    <div class="navsection">

        <accordion class="btn" close-others="oneAtATime">
        
            <div style="float:left;">
                <img src="~/Images/words.jpg" /><label><b>LEARN WORDS IN: </b>{{dictionaries}}</label>
            </div>

                <div style="float:right;"><img src="http://dummyimage.com/100"></div>

</accordion>
    </div>
    <div class="nav-header">
      

        <div class="wordProperty">{{sound}}</div>



        <div class="content">
            <h1 ng-click="getWordName(word.WordId)" id="word{{word.WordId}}" class="phraseconte wordSeparation" ng-repeat="word in wordsInPhrases">{{word.WordName}}<span ng-show=" ! $last ">&nbsp;</span></h1>

        </div>
        <div class="wordProperty"><span>{{description}}</span></div>
        <nav>
            <ul class="pager">
                <li><a ng-show="navLeft" ng-click="moveIndex(-1)">Previous</a></li>
                <li><a ng-show="navRight" ng-click="moveIndex(1)">Next</a></li>
            </ul>
        </nav>
    </div>
    <div class="navsection">

        <accordion class="btn" style="float:left;" close-others="oneAtATime">

            <span class="badge">Systems information: 1</span>
            <accordion-group class="btn" heading="(Show/Hide) ">
                <textarea class="form-horizontal" ng-model="error" style="width: 100%; height: 15em;"></textarea>

            </accordion-group>

        </accordion>
    </div>
</div>
